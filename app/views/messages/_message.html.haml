.message-contents__message-box{'data-id': message.id }
  .message-contents__message-box__upper-message
    .message-name
      = message.user.name
    .message-date
      = message.created_at.to_s
  .message-contents__message-box__lower-message
    - if message.content.present?
      .message-content
        = message.content
    = image_tag message.image.url, class: 'message-contents__message-box__lower-message' if message.image.url.present?
